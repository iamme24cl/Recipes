<% if object.errors.any? %>
	<div class="row text-center">
		<div class="col" id="error-explanation">
			<h2>
				<%= pluralize(object.errors.count, "error") %>
				prohibited this object from being saved:
			</h2>

			<ul>
				<% object.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	</div>
<% end %>
<div class="container mt-5">
	<div class="row">
		<div class="col">
			<h5>Filter Recipes by one of the following:</h5>
		</div>

		<%= render 'filter_form' %>
	</div>

	<div class="row mt-3">
		<% @recipes.each do |recipe| %>

			<div class="col-md-6 col-lg-4 col-xl-3 mt-3 text-center">
				<div class="card recipe-card" style="width: 18rem;">
					<% if recipe.image.attached? %>
						<a href="<%= recipe_path(recipe) %>"><%= image_tag url_for(recipe.image), class: "card-img-top", alt: "recipe image", height: "250px" %></a>		
					<% end %>
					<div class="card-body">
						<h5 class="card-title"><%=link_to recipe.title, recipe_path(recipe.id) %></h5>
						<p class="card-text">
							<b><%= render partial: 'display_rating', locals: {recipe: recipe} %></b>

							<small class="recipe-title-content">
								<b>By:</b> <%= recipe.user.name %> <%= submitted_on recipe %>
							</small>	

							<p>
								<small class="recipe-title-content"><b>Ready in</b> - <%= recipe.cook_time %></small>				
							</p>
						</p>
						<a href="<%= recipe_path(recipe) %>" class="btn btn-light recipe-btn">Go to Recipe</a>
					</div>
				</div>
			</div>	
		<% end %>
	</div>
</div>
<div>
  <% if recipe.reviews.exists? %>		
    <% recipe.avg_rating.times do %>
      <span class="glyphicon glyphicon-star"></span>
    <% end %>

    <% recipe.empty_stars.times do %>
      <span class="glyphicon glyphicon-star-empty"></span>
    <% end %>

    <span class="reviews-count"><%= pluralize(recipe.reviews.count, "review") %></span>
  <% end %>	
</div>

